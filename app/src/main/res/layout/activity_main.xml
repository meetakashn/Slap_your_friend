<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainactivitybg"
    tools:context=".MainActivity">


<!-- Spinner Code start -->

    <ImageView
        android:id="@+id/spinner"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_55sdp"
        android:layout_marginTop="@dimen/_223sdp"
        android:layout_marginEnd="@dimen/_55sdp"
        android:layout_marginBottom="@dimen/_247sdp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/spinnerplay" />

    <ImageView
        android:id="@+id/spinner"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_55sdp"
        android:layout_marginTop="@dimen/_223sdp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/spinnerarrow" />

    <Button
        android:id="@+id/play"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30ssp"
        android:layout_marginStart="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_430sdp"
